{
  "root": true,
  "ignorePatterns": ["dist"],
  "overrides": [
    {
      "files": [
        "**/*.js"
      ],
      "extends": [
        "sukka/node"
      ]
    },
    {
      "files": [
        "webpack.config.js"
      ],
      "rules": {
        "node/no-unpublished-require": "off"
      },
      "parserOptions": {
        "ecmaVersion": "latest"
      }
    },
    {
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "extends": [
        "sukka/react",
        "sukka/typescript"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json"
        ]
      },
      "rules": {
        "@fluffyfox/prefer-timer-id": "off",
        "@fluffyfox/no-default-error": "off"
      }
    },
    {
      "files": [
        "functions/**/*.ts"
      ],
      "extends": [
        "sukka/typescript"
      ],
      "parserOptions": {
        "project": [
          "./functions/tsconfig.json"
        ]
      },
      "rules": {
        "@fluffyfox/prefer-timer-id": "off",
        "@fluffyfox/no-default-error": "off"
      }
    }
  ]
}
